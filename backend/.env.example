# ==================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=tu_contraseña
DB_NAME=erp_psi
DB_PORT=3306

# ==================================
# CONFIGURACIÓN DEL SERVIDOR
# ==================================
PORT=3001
NODE_ENV=development

# ==================================
# CONFIGURACIÓN DE SEGURIDAD
# ==================================
JWT_SECRET=tu_clave_secreta_jwt_aqui
SESSION_SECRET=tu_clave_secreta_sesion_aqui

# ==================================
# CONFIGURACIÓN DE EMAIL (NODEMAILER)
# ==================================

# Para Gmail:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_contraseña_de_aplicacion

# Para otros proveedores (SendGrid, Mailgun, etc.):
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=apikey
# EMAIL_PASSWORD=tu_api_key

# Email de remitente (si es diferente al de autenticación)
EMAIL_FROM=noreply@psi.com
EMAIL_FROM_NAME=PSI Telecomunicaciones

# Emails de administradores (separados por comas)
EMAIL_ADMIN=admin@psi.com,soporte@psi.com

# ==================================
# CONFIGURACIÓN DE ARCHIVOS
# ==================================
UPLOAD_DIR=uploads
TEMP_DIR=temp

# ==================================
# CONFIGURACIÓN DE LOGS
# ==================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ==================================
# OTRAS CONFIGURACIONES
# ==================================
# Tiempo de expiración de tokens (en horas)
TOKEN_EXPIRATION=24

# URL del frontend (para CORS)
FRONTEND_URL=http://localhost:3000

# ==================================
# NOTAS DE CONFIGURACIÓN
# ==================================
#
# Para Gmail:
# 1. Habilita la verificación en 2 pasos en tu cuenta de Google
# 2. Genera una contraseña de aplicación: https://myaccount.google.com/apppasswords
# 3. Usa esa contraseña en EMAIL_PASSWORD
#
# Para SendGrid:
# 1. Crea una cuenta en SendGrid
# 2. Genera una API Key
# 3. Usa 'apikey' como EMAIL_USER
# 4. Usa tu API Key como EMAIL_PASSWORD
#
# Para Mailgun:
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_USER=tu_usuario_mailgun
# EMAIL_PASSWORD=tu_contraseña_mailgun
